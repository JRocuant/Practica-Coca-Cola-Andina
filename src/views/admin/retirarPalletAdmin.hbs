<head>
  <!-- Define la codificación de caracteres como UTF-8 -->
  <meta charset="UTF-8" />
  <!-- Hace que el diseño sea responsive en dispositivos móviles -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Título de la pestaña del navegador -->
  <title>Dashboard - Coke Kronos</title>
  <!-- Enlace al archivo CSS específico de esta vista -->
  <link rel="stylesheet" href="/css/retirarpalletadm.css" />
  <!-- Enlace al CSS del footer -->
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <!-- Barra lateral con opciones del panel de administración -->
  <div class="sidebar">
    <h2>Dashboard</h2>
    <!-- Botones que redirigen a diferentes secciones del admin -->
    <button onclick="window.location.href='/admin/usuarios'">Usuarios</button>
    <button onclick="window.location.href='/admin/transportes'">Transportes</button>
    <button onclick="window.location.href='/admin/cargarCamionAdmin'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/inicio'">Inicio</button>
    <button onclick="window.location.href='/admin/cambioEntreBahiasAdmin'">Cambio entre Bahías</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <!-- Botón para cerrar sesión -->
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <!-- Contenido principal del dashboard -->
  <div class="content">
    <div class="header">
      <!-- Título de la sección -->
      <h1>Lista de Pallets Listos Retirados</h1>
      <!-- Fecha y hora actuales (se muestra estáticamente aquí) -->
      <div class="fecha">
        <strong>Miércoles 2 de abril de 2025</strong><br />
        16:00 hrs
      </div>
    </div>

    <!-- Tabla donde se listan los registros de pallets retirados -->
    <table class="tasks-table">
      <tr>
        <th>Usuario</th>
        <th>Tarea</th>
        <th>Tiempo ejecución</th>
        <th>Turno</th>
        <th>Fecha</th>
        <th>Transporte</th>
        <th>Bahía de Carga</th>
        <th>Código Ticket del Pallet</th>
      </tr>
      <!-- Iteración de registros utilizando Handlebars -->
      {{#each registros}}
      <tr>
        <td>{{nombreUsuario}}</td>
        <td>{{codigoTarea}}</td>
        <td>{{duracion}}</td>
        <td>{{turno}}</td>
        <td>{{formatDate operacionInicio}}</td>
        <td>{{transporte}}</td>
        <td>{{bahiaCarga}}</td>
        <td>{{codigoTicket}}</td>
      </tr>
      {{/each}}
    </table>

    <br>

    <!-- Script para manejar el cierre de sesión -->
    <script>
      const logoutBtn = document.getElementById('logoutBtn');
      if (logoutBtn) {
          logoutBtn.addEventListener('click', () => {
              // Limpia sessionStorage y localStorage al cerrar sesión
              sessionStorage.clear();
              localStorage.clear();
              localStorage.removeItem('tareaActual');

              // Redirige al usuario a la página de inicio de sesión
              window.location.href = '/';
          }); 
      }
    </script>

</body>
</html>
