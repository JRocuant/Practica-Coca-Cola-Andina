<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Coke Kronos</title>
  <link rel="stylesheet" href="/css/transportes.css" />
  <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
  <div class="sidebar">
    <h2>Dashboard</h2>
    <button onclick="window.location.href='/admin/usuarios'">Usuarios</button>
    <button onclick="window.location.href='/admin/inicio'">Inicio</button>
    <button onclick="window.location.href='/admin/cargarCamionAdmin'">Cargar Camión</button>
    <button onclick="window.location.href='/admin/retirarPalletAdmin'">Retiro de Pallet</button>
    <button onclick="window.location.href='/admin/cambioEntreBahiasAdmin'">Cambio entre Bahías</button>
    <button onclick="window.location.href='/admin/tiempos'">Tiempos</button>
    <button class="logout-btn" id="logoutBtn">Cerrar Sesión</button>
  </div>

  <div class="content">
    <div class="header">
      <h1>Carga de camión por turno</h1>
      <div class="fecha">
        <strong>Miércoles 2 de abril de 2025</strong><br />
        16:00 hrs
      </div>
    </div>

    <table class="tasks-table">
      <tr>
        <th>Patente</th>
        <th>Total cargas realizadas</th>
        <th>Turno</th>
        <th>Tiempo total de carga</th>
        <th>Fecha</th>
      </tr>
      <tr>
        <td>• 6183828</td>
        <td>
          • 10<br>
        </td>
        <td>• Mañana</td>
        <td>• 07:30:23</td>
        <td>• 2025-04-01</td>
      </tr>
    </table>

    <br>

<script>
  const logoutBtn = document.getElementById('logoutBtn');
  if (logoutBtn) {
      logoutBtn.addEventListener('click', () => {
          // Limpia sessionStorage y localStorage al cerrar sesión
          sessionStorage.clear();
          localStorage.clear();
          localStorage.removeItem('tareaActual');

          // Redirige al usuario a la página de inicio de sesión
          window.location.href = '/';
      }); // <-- ESTA ES LA LLAVE QUE FALTABA
  }
</script>

</body>
</html>
