<!-- Script para mostrar u ocultar la lista de contactos -->
<script>
    function toggleContactos() {
        const contactos = document.getElementById("contactos");
        if (contactos.style.maxHeight) {
            contactos.style.maxHeight = null;
        } else {
            contactos.style.maxHeight = contactos.scrollHeight + "px";
        }
    }
</script>

